<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="top|center_horizontal"
	android:orientation="vertical"
	android:id="@+id/mainLayout"
	android:animateLayoutChanges="true"
	android:layoutAnimation="@anim/fadeinlayout">

	<TextView
		android:layout_height="wrap_content"
		android:text="RPG"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content"
		android:id="@+id/mainTitle"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="15dp"
		android:shadowColor="#0000FF"
		android:shadowDx="10"
		android:shadowDy="10"
		android:shadowRadius="10"
		android:textColor="#0000FF"
		android:scaleX="1.5"
		android:scaleY="1.5"/>

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginTop="75dp"
		android:layout_marginRight="10dp"
		android:layout_marginLeft="10dp">

		<Button
			android:layout_height="wrap_content"
			android:text="Options"
			android:layout_width="wrap_content"
			android:id="@+id/mainConfigureButton"
			android:onClick="switchLayout"
			android:shadowColor="#FF0000"
			android:shadowDx="5"
			android:shadowDy="5"
			android:shadowRadius="5"
			android:textColor="#000000"
			android:layout_gravity="left"
			android:layout_alignParentLeft="true"/>

		<Button
			android:layout_height="wrap_content"
			android:text="How To Play"
			android:layout_width="wrap_content"
			android:id="@+id/mainHowToButton"
			android:textColor="#FFFFFF"
			android:shadowColor="#FFD63D"
			android:shadowDx="5"
			android:shadowDy="5"
			android:shadowRadius="5"
			android:onClick="switchLayout"
			android:layout_gravity="right"
			android:layout_alignParentRight="true"/>

	</RelativeLayout>

	<Button
		android:layout_height="wrap_content"
		android:text="PLAY"
		android:layout_width="wrap_content"
		android:id="@+id/mainPlayButton"
		android:layout_gravity="center|center_vertical|center_horizontal"
		android:layout_marginTop="75dp"
		android:padding="20dp"
		android:shadowColor="#00FF00"
		android:shadowDx="5"
		android:shadowDy="5"
		android:shadowRadius="5"
		android:textColor="#FF0000"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:onClick="startPlay"/>

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginTop="75dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp">

		<Button
			android:layout_height="wrap_content"
			android:text="Load Game"
			android:layout_width="wrap_content"
			android:id="@+id/mainLoadGameButton"
			android:textColor="#08F549"
			android:shadowColor="#FF0000"
			android:shadowDx="5"
			android:shadowDy="5"
			android:shadowRadius="5"
			android:onClick="switchLayout"
			android:layout_alignParentLeft="true"/>

		<Button
			android:layout_height="wrap_content"
			android:text="About"
			android:layout_width="wrap_content"
			android:id="@+id/mainAboutButton"
			android:shadowColor="#0000FF"
			android:shadowDx="2.5"
			android:shadowDy="2.5"
			android:shadowRadius="2.5"
			android:textColor="#00FFFF"
			android:onClick="switchLayout"
			android:layout_alignParentRight="true"/>

	</RelativeLayout>

</LinearLayout>

